{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "exclude": ["**/bin/**", "**/obj/**"],
          "src": "../"
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "netstandard2.1"
      },
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": [
          "articles/**.md",
          "articles/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "bGUI Documentation",
      "_appFooter": "bGUI - A Fluent UI Library for MelonLoader Mods",
      "_enableSearch": true,
      "_disableContribution": false,
      "_appLogoPath": "",
      "_gitContribute": {
        "repo": "",
        "branch": "main"
      }
    },
    "markdownEngineName": "markdig"
  }
}
